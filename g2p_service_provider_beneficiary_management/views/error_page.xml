<odoo>
    <!-- #ERROR PAGE -->
    <template id="error_template" name="Error Template">
        <t t-call="g2p_service_provider_portal_base.base">
            <t t-set="page_title" t-value="'Error'" />
            <div class="container">
                <div class="row">
                    <div class="col-md-9" style="margin:0 auto;">
                        <div
                            class="alert alert-danger text-center"
                            style="font-size: 24px; padding: 20px; top:30px"
                        >
                            <strong>Error:</strong>
                            <t t-esc="error_message" />
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
