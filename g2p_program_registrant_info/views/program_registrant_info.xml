<odoo>
    <!-- individuals view-->
    <record id="view_registrant_info_form_tree" model="ir.ui.view">
        <field name="name">view_registrant_info_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="g2p_registry_individual.view_individuals_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other']" position="before">
                <page string="Program Info">
                    <field name="program_registrant_info_ids" readonly="0" nolabel="1">
                      <tree>
                          <button
                                name="open_registrant_form"
                                type="object"
                                icon="fa-external-link"
                                class="btn-success"
                            />
                          <field name="registrant_id" invisible="1" />
                          <field name="program_id" />
                          <field name="program_registrant_info" widget="g2p_addl_info_widget" />
                      </tree>
                    </field>
                </page>

            </xpath>
        </field>
    </record>
    <record id="view_program_registrant_info_form" model="ir.ui.view">
        <field name="name">view_program_registrant_info_form</field>
        <field name="model">g2p.program.registrant_info</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Program Registrant Info">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>

                    <div class="oe_title mb24">
                        <label for="registrant" string="Registrant:" />
                        <h1>
                            <field
                                id="registrant"
                                name="registrant_id"
                                placeholder="Enter the registrant name..."
                                readonly="1"
                            />
                        </h1>
                        <label for="program" string="Program:" />
                        <h2>
                            <field id="program" name="program_id" placeholder="program..." />
                        </h2>
                    </div>
                    <group colspan="4" col="4">
                        <field name="program_registrant_info" widget="g2p_addl_info_widget" />

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_group_registrant_info_form_tree" model="ir.ui.view">
        <field name="name">view_group_registrant_info_form_tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="g2p_registry_group.view_groups_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other']" position="before">
                <page string="Program Info">
                    <field name="program_registrant_info_ids" readonly="0" nolabel="1">
                      <tree>
                          <button
                                name="open_registrant_form"
                                type="object"
                                icon="fa-external-link"
                                class="btn-success"
                            />
                          <field name="registrant_id" invisible="1" />
                          <field name="program_id" />
                          <field name="program_registrant_info" widget="g2p_addl_info_widget" />
                      </tree>
                    </field>
                </page>

            </xpath>
        </field>
    </record>


</odoo>
