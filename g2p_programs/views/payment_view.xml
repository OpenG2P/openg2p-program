<odoo>
    <record id="view_payment_tree" model="ir.ui.view">
        <field name="name">view_payment_tree</field>
        <field name="model">g2p.payment</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name" />
                <field name="partner_id" />
                <field name="entitlement_id" />
                <field name="program_id" />
                <field name="cycle_id" />
                <field name="beneficiary_id" />
                <field name="disbursement_envelope_id" />
                <field name="disbursement_id" />
                <field name="amount_issued" />
                <field name="issuance_date" />
                <field name="amount_paid" />
                <field name="payment_datetime" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="remittance_reference_number" />
                <field name="remittance_statement_id" />
                <field name="remittance_entry_sequence" />
                <field name="remittance_entry_date" />
                <field name="reversal_statement_id" />
                <field name="reversal_entry_sequence" />
                <field name="reversal_entry_date" />
                <field name="reversal_reason" />
                <field
                    name="dispatch_status"
                    decoration-success="dispatch_status=='sent'"
                    decoration-warning="dispatch_status=='pending'"
                    widget="badge"
                    string="Dispatch Status"
                />
            </tree>
        </field>
    </record>

    <record id="view_payment_form" model="ir.ui.view">
        <field name="name">view_payment_form</field>
        <field name="model">g2p.payment</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Payment" create="0">
                <header>
                    <button
                        type="object"
                        class="btn-success"
                        icon="fa-thumbs-o-up"
                        title="Send payment"
                        name="send_payment"
                        invisible="dispatch_status != 'pending'"
                        string="Send Payment"
                    />
                    <field name="dispatch_status" widget="statusbar" statusbar_visible="pending,sent" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-folder-open-o"
                            name="open_disb_form"
                            attrs="{'invisible':[('state','!=','approved')]}"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Disbursement</span>
                                <span class="o_stat_text">Form</span>
                            </div>
                        </button> -->
                    </div>
                    <widget
                        name="web_ribbon"
                        title="Sent"
                        bg_color="bg-success"
                        invisible="dispatch_status != 'sent'"
                    />
                    <widget
                        name="web_ribbon"
                        title="Pending"
                        bg_color="bg-warning"
                        invisible="dispatch_status != 'pending'"
                    />
                    <div class="oe_title mb24">
                        <label for="partner_id" string="Beneficiary:" />
                        <h1>
                            <field
                                id="partner_id"
                                name="partner_id"
                                readonly="1"
                                options="{'no_open':true}"
                            />
                            <!-- <field name="edit_css" force_save="1" nolabel="1" /> -->
                        </h1>
                        <label for="program_id" string="Program:" />
                        <h2>
                            <field
                                id="program_id"
                                name="program_id"
                                readonly="1"
                                options="{'no_open':true}"
                            />
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1" />
                            <field name="entitlement_id" readonly="1" options="{'no_open':true}" />
                            <field name="beneficiary_id" readonly="dispatch_status in ('sent')" />
                        </group>
                        <group>
                            <field name="cycle_id" readonly="1" options="{'no_open':true}" />
                            <field name="batch_id" readonly="1" options="{'no_open':true}" />
                            <field
                                name="journal_id"
                                string="Journal"
                                options="{'no_open':True}"
                                readonly="1"
                            />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                options="{'no_create': True}"
                                force_save="1"
                                readonly="dispatch_status in ('sent','pending')"
                            />
                        </group>
                    </group>
                    <group string="Payment">
                        <field name="amount_issued" readonly="dispatch_status in ('sent','pending')" />
                        <field name="issuance_date" readonly="dispatch_status in ('sent','pending')" />
                        <field name="amount_paid" readonly="dispatch_status in ('sent','pending')" />
                        <field name="payment_datetime" readonly="dispatch_status in ('sent','pending')" />
                        <field name="payment_fee" readonly="dispatch_status in ('sent','pending')" />
                        <field name="currency_id" invisible="1" />
                        <field name="dispatch_status" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="payment_filter" model="ir.ui.view">
        <field name="name">payment_filter</field>
        <field name="model">g2p.payment</field>
        <field name="priority" eval="1" />
        <field name="arch" type="xml">
            <search string="Search Payments">
                <field name="entitlement_id" />
                <field name="beneficiary_id" />
                <field name="cycle_id" />
                <field name="name" />
                <separator />
                <filter name="filter_issuance_date" date="issuance_date" />
                <filter name="filter_payment_datetime" date="payment_datetime" />
                <separator />
                <filter name="pending_state" string="Issued" domain="[('dispatch_status','=','pending')]" />
                <filter name="sent_state" string="Sent" domain="[('dispatch_status','=','sent')]" />
                <group expand="0" string="Group By">
                    <filter string="Cycle" name="grp_cycle" context="{'group_by': 'cycle_id'}" />
                    <separator orientation="vertical" />
                    <filter string="Status" name="grp_status" context="{'group_by': 'dispatch_status'}" />
                    <filter string="Company" name="grp_company_id" context="{'group_by': 'company_id'}" />
                </group>
                <!-- <searchpanel>
                    <field name="program_id" icon="fa-users"/>
                </searchpanel> -->
            </search>
        </field>
    </record>

    <record id="action_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="payment_filter" />
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Payment Transactions
            </p><p>
                List of payment transactions generated from entitlements.
            </p>
        </field>
    </record>

    <record id="action_payment_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_payment_tree" />
        <field name="act_window_id" ref="action_payment" />
    </record>

    <record id="action_payment_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_payment_form" />
        <field name="act_window_id" ref="action_payment" />
    </record>

    <record model="ir.actions.server" id="assign_payment_batch">
      <field name="name">Assign Payments to Batch</field>
      <field name="model_id" ref="g2p_programs.model_g2p_assign_payments_batch_wizard" />
      <field name="binding_model_id" ref="g2p_programs.model_g2p_payment" />
      <field name="binding_view_types">list,form</field>
      <field name="state">code</field>
      <field name="code">action = model.open_wizard()</field>
    </record>

    <menuitem
        id="menu_payment"
        name="Payments"
        action="action_payment"
        parent="g2p_accounting_root"
        sequence="24"
        groups="g2p_registry_base.group_g2p_admin,g2p_programs.g2p_program_manager,g2p_programs.g2p_finance_validator"
    />

</odoo>
