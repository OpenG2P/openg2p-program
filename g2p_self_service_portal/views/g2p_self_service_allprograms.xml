<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="allprograms" name="G2P Self Service All Programs">
        <t t-call="g2p_self_service_portal.base">
            <t t-set="title">All Programs | Self Service Portal</t>
            <div class="main-container">
                <div class="container-adjuster">
                    <h5 class="all-title">All Programs</h5>
                    <ol class="breadcrumb  breadcrumb-list bg-transparent">
                        <li class="breadcrumb-item">
                            <a href="/selfservice">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">All Programs</li>
                    </ol>

                    <div class="table-container">
                        <div class="table-head-container">
                            <p class="table-title">All Programs</p>
                            <form class="form-inline my-2" action="/selfservice/programs">
                                <div class="search-box">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="16"
                                        height="16"
                                        fill="currentColor"
                                        class="bi bi-search search-icon"
                                        viewBox="0 0 16 16"
                                    >
                                        <path
                                            d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"
                                        />
                                    </svg>

                                    <input
                                        placeholder="Search by program name"
                                        class="search-text"
                                        name="q"
                                        id="search-text"
                                    />
                                    <span id="search-text-clear">
                                        <i class="fa fa-times" />
                                    </span>
                                </div>
                            </form>
                        </div>
                        <div class="tables-values-container">
                            <table class="css-serial" id="allprograms">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Program Name <i class="fa fa-sort" /></th>
                                        <th>Status <i class="fa fa-sort" /></th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="programs" t-as="program">

                                        <tr>
                                            <td>
                                            </td>
                                            <td
                                                data-bs-toggle="modal"
                                                t-att-data-bs-target="'#exampleModalCenter_' + str(program['id'])"
                                            >
                                                <t t-if="program['is_latest']">
                                                    <!-- <a href="/program/" class="program-name"> -->
                                                    <button
                                                        class="badge badge-button"
                                                        disabled="1"
                                                        data-sort-ignore="true"
                                                    >
                                                        <span>NEW</span>
                                                    </button>
                                                    <t t-out="program['name']" />
                                                    <!-- </a> -->
                                                </t>
                                                <t t-else="">
                                                    <!-- <a href="/program/" class="program-name"> -->
                                                    <t t-out="program['name']" />
                                                    <!-- </a> -->
                                                </t>
                                            </td>
                                            <!-- Modal -->
                                            <div
                                                class="modal fade"
                                                t-att-id="'exampleModalCenter_' + str(program['id'])"
                                                tabindex="-1"
                                                role="dialog"
                                                aria-labelledby="exampleModalCenterTitle"
                                                aria-hidden="true"
                                            >
                                                <div
                                                    class="modal-dialog modal-dialog-centered modal-lg"
                                                    style="width: 450px; height: 350px;"
                                                    role="document"
                                                >
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5
                                                                class="modal-title"
                                                                id="exampleModalLongTitle"
                                                            ><t t-out="program['name']" /></h5>
                                                            <button
                                                                type="button"
                                                                class="close"
                                                                data-bs-dismiss="modal"
                                                                aria-label="Close"
                                                            >
                                                                <span>&#215;</span>
                                                            </button>
                                                        </div>
                                                        <div
                                                            class="modal-body"
                                                            style="height: 300px; overflow-y: auto;"
                                                        >
                                                            <p>
                                                                <t t-out="program['description']" />
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <t t-if="program['has_applied']">

                                                <t t-if="program['status']=='Applied'">
                                                    <td>

                                                        <button
                                                            string="Applied"
                                                            type="object"
                                                            class="submit-button"
                                                            disabled="1"
                                                        >
                                                            Applied
                                                        </button>

                                                    </td>
                                                    <td>
                                                        <t t-if="program['is_form_mapped']">
                                                            <t t-if="program['is_multiple_form_submission']">
                                                                <a
                                                                    t-attf-href="/selfservice/submissions/{{program['id']}}"
                                                                >
                                                                    <button
                                                                        string="Reapply"
                                                                        type="object"
                                                                        class="apply-button"
                                                                    >
                                                                        Reapply
                                                                    </button>
                                                                </a>
                                                            </t>
                                                            <t t-else="">
                                                                <a
                                                                    t-attf-href="/selfservice/submitted/{{program['id']}}"
                                                                >
                                                                    <button
                                                                        string="View"
                                                                        type="object"
                                                                        class="view-button"
                                                                    >
                                                                        View
                                                                    </button>
                                                                </a>
                                                            </t>
                                                        </t>
                                                    </td>
                                                </t>
                                                <t t-elif="program['status']=='Enrolled'">
                                                    <td>
                                                        <t
                                                            t-if="program['single_submission'] == True and program['is_application_rejected']== True"
                                                        >
                                                            <button
                                                                string="Rejected"
                                                                type="object"
                                                                class="notapplied-button"
                                                                disabled="1"
                                                            >
                                                                Rejected
                                                            </button>
                                                        </t>
                                                        <t t-else="">
                                                            <button
                                                                string="Apply"
                                                                type="object"
                                                                class="enroll-button"
                                                                disabled="1"
                                                            >
                                                                Enrolled
                                                            </button>
                                                        </t>
                                                    </td>
                                                    <td>
                                                        <t t-if="program['is_form_mapped']">
                                                            <t t-if="program['is_multiple_form_submission']">
                                                                <a
                                                                    t-attf-href="/selfservice/submissions/{{program['id']}}"
                                                                >

                                                                    <button
                                                                        string="Reapply"
                                                                        type="object"
                                                                        class="apply-button"
                                                                    >
                                                                        Reapply
                                                                    </button>
                                                                </a>
                                                            </t>
                                                            <t t-else="">
                                                                <a
                                                                    t-attf-href="/selfservice/submitted/{{program['id']}}"
                                                                >
                                                                    <button
                                                                        string="View"
                                                                        type="object"
                                                                        class="view-button"
                                                                    >
                                                                        View
                                                                    </button>
                                                                </a>
                                                            </t>
                                                        </t>
                                                    </td>
                                                </t>
                                                <t t-elif="program['status']=='Not Eligible'">
                                                    <td>
                                                        <button
                                                            string="Not Eligible"
                                                            type="object"
                                                            class="notapplied-button"
                                                            disabled="1"
                                                        >
                                                            Not Eligible
                                                        </button>
                                                    </td>
                                                    <td>
                                                        <a
                                                            t-attf-href="/selfservice/submitted/{{program['id']}}"
                                                        >
                                                            <button
                                                                string="View"
                                                                type="object"
                                                                class="view-button"
                                                            >
                                                                View
                                                            </button>
                                                        </a>
                                                    </td>
                                                </t>

                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <button
                                                        string="Apply"
                                                        type="object"
                                                        class="notapplied-button"
                                                        disabled="1"
                                                    >
                                                        Not Applied
                                                    </button>
                                                </td>
                                                <td>
                                                    <t t-if="program['is_form_mapped']">
                                                        <a t-attf-href="/selfservice/apply/{{program['id']}}">
                                                            <button
                                                                string="Apply"
                                                                type="object"
                                                                class="apply-button"
                                                            >
                                                                Apply
                                                            </button>
                                                        </a>
                                                    </t>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <div id="page-buttons" class="pagination justify-content-center">

                        </div>
                        <script
                            type="text/javascript"
                            src="/g2p_self_service_portal/static/src/js/self_service_search_sort_all.js"
                        />
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
